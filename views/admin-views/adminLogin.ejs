<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin-css/adminLogin.css">
</head>
<body>
  <div class="container-fluid h-100">
    <div class="row h-100">
      <!-- Left Logo Section -->
      <div class="col-md-6 left-box">
        <div class="logo-text text-center">
          <img src="/images/aromix-logo-admin.png" alt="Aromix Logo" class="logo-img">
        </div>
      </div>

      <!-- Right Login Section -->

      <div class="col-md-6 p-0">

        <div class="login-box">
          <form action="/admin/login" method="POST" class="w-100 login-form">
              <%if(errorMessage){%>
                <div class="text-danger text-center mb-4">
                  <%= errorMessage %>
                    <script>
                      console.log("Enterd")
                    </script>
              
                </div>
                <% }%>
            <h2 class="text-center mb-4 login-heading">Admin Login</h2>

            <div class="mb-4">
              <input type="email" name="email" placeholder="Enter Your Email" required class="form-control">
            </div>

            <div class="mb-4 position-relative">
              <input type="password" name="password" placeholder="Password" required class="form-control" id="passwordInput">
              <button type="button" class="btn btn-sm btn-outline-light position-absolute top-50 end-0 translate-middle-y me-2" id="togglePassword">
                üëÅÔ∏è
              </button>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn login-btn">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Your JS script should go here -->
  <script src="/js/admin-javascript/adminLogin.js"></script>
</body>
</html>