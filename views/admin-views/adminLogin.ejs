<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin-css/adminLogin.css">
</head>
<body>
  <div class="container-fluid h-100">
    <div class="row h-100">
      <!-- Left Logo Section -->
      <div class="col-md-6 left-box">
        <div class="logo-text text-center">
          <img src="/images/aromix-logo-admin.png" alt="Aromix Logo" class="logo-img">
        </div>
      </div>

      <!-- Right Login Section -->

      <div class="col-md-6 p-0">

        <div class="login-box">
          <form id="loginForm" action="/admin/login" method="POST" class="w-100 login-form" novalidate>
              <%if(errorMessage){%>
                <div class="text-danger text-center mb-4">
                  <%= errorMessage %>
                    <script>
                      console.log("Enterd")
                    </script>
              
                </div>
                <% }%>
            <h2 class="text-center mb-4 login-heading">Admin Login</h2>

            <div class="mb-4">
              <input id="email" type="email" name="email" placeholder="Enter Your Email" required class="form-control">
              <div id="emailError" class="text-danger small mt-1"></div>
            </div>

            <div class="mb-4 position-relative">
              <input type="password" name="password" placeholder="Password" required class="form-control" id="passwordInput">
              <button type="button" class="btn btn-sm btn-outline-light position-absolute top-50 end-0 translate-middle-y me-2" id="togglePassword">
                üëÅÔ∏è
              </button>
              <div id="passwordError" class="text-danger small mt-1"></div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn login-btn">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Your JS script should go here -->
  <!-- <script src="/js/admin-javascript/adminLogin.js"></script> -->
  <script>
    document.getElementById("loginForm").addEventListener("submit", function(e) {
  e.preventDefault();

  const email = document.getElementById("email").value.trim();
  const password = document.getElementById("passwordInput").value.trim();

  const emailErrorDiv = document.getElementById("emailError");
  const passwordErrorDiv = document.getElementById("passwordError");

  // Clear old errors
  emailErrorDiv.textContent = '';
  passwordErrorDiv.textContent = '';

  let valid = true;

  // Email validation
  const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!email) {
    emailErrorDiv.textContent = "Email is required";
    valid = false;
  } else if (!emailPattern.test(email)) {
    emailErrorDiv.textContent = "Please enter a valid email address";
    valid = false;
  }

  // Password validation
  if (!password) {
    passwordErrorDiv.textContent = "Password is required";
    valid = false;
  } else if (password.length < 6) {
    passwordErrorDiv.textContent = "Password must be at least 6 characters";
    valid = false;
  }

  if (valid) {
    this.submit(); // submit if all good
  }
});

const toggleBtn = document.getElementById('togglePassword');
const passwordInput = document.getElementById('passwordInput');

toggleBtn.addEventListener('click', () => {
  const isPassword = passwordInput.type === 'password';
  passwordInput.type = isPassword ? 'text' : 'password';
  toggleBtn.textContent = isPassword ? 'üôà' : 'üëÅÔ∏è';
});

  </script>
</body>
</html>