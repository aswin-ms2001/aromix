<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Product | Aromix</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
  <link href="https://cdn.jsdelivr.net/npm/cropperjs@1.5.13/dist/cropper.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/admin-css/adminProductAdding.css" />
  <link rel="stylesheet" href="/css/admin-css/sidebar.css" />
</head>
<body>
  <div class="admin-layout ">
    <div style="background-color: #1b1b1b; margin: 0; padding: 0;margin-left: 0;padding-left: 0;">
      <%- include('./partials/sidebar') %>
    </div>
    

    <div class="admin-main">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Edit Product</h2>
      </div>

      <div class="card p-4" style="background-color: #2e0e46; border-radius: 20px;">
        <form id="product-form" enctype="multipart/form-data" data-product-id="<%= product._id %>" novalidate>
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label text-white">Product Name*</label>
              <input type="text" name="name" class="form-control" value="<%= product.name %>" required />
              <div class="text-danger error-msg d-none">Product name is required</div>
            </div>
            <div class="col-md-6">
              <label class="form-label text-white">Category*</label>
              <select name="category" class="form-select" required>
                <% categories.forEach(category => { %>
                  <option value="<%= category._id %>::<%= category.name %>" 
                    <%= product.categoryId.toString() === category._id.toString() ? "selected" : "" %>>
                    <%= category.name %>
                  </option>
                <% }); %>
              </select>
              <div class="text-danger error-msg d-none">Category is required</div>

            </div>
            <div class="col-md-6">
              <label class="form-label text-white">Gender*</label>
              <select name="gender" class="form-select" required>
                <option value="Male" <%= product.gender === "Male" ? "selected" : "" %>>Male</option>
                <option value="Female" <%= product.gender === "Female" ? "selected" : "" %>>Female</option>
                <option value="Unisex" <%= product.gender === "Unisex" ? "selected" : "" %>>Unisex</option>
              </select>
              <div class="text-danger error-msg d-none">Gender is required</div>
            </div>
          </div>

          <h5 class="text-white mt-5">Variants</h5>

          <% product.variants.forEach((variant, vIndex) => { %>
            <div class="variant-block border p-3 mb-4 rounded" style="background-color: #47195f;">
              <input type="hidden" name="variants[<%= vIndex %>]._id" value="<%= variant._id %>" />
              <div class="row g-3">
                <div class="row">
                  <div class="col-md-4">
                    <label class="form-label text-white">Volume (ml)</label>
                    <input type="number" name="variants[<%= vIndex %>].volume" value="<%= variant.volume %>" class="form-control" required />
                    <div class="text-danger error-msg d-none">Volume is required</div>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label text-white">Price</label>
                    <input type="number" name="variants[<%= vIndex %>].price" value="<%= variant.price %>" class="form-control" required />
                    <div class="text-danger error-msg d-none">Price is required</div>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label text-white">Stock</label>
                    <input type="number" name="variants[<%= vIndex %>].stock" value="<%= variant.stock %>" class="form-control" required />
                    <div class="text-danger error-msg d-none">Stock is required</div>
                  </div>
                </div>

                <div class="row g-3">
                  <div class="col-md-12">
                    <label class="form-label text-white">Description</label>
                    <textarea name="variants[<%= vIndex %>].description" class="form-control" required><%= variant.description %></textarea>
                    <div class="text-danger error-msg d-none">Description is required</div>
                  </div>
                </div>

                <div class="row">
                  <% for (let i = 0; i < 4; i++) { %>
                    <div class="col-md-3">
                      <label class="form-label text-white">Image <%= i + 1 %></label>
                      <% if (variant.images[i]) { %>
                        <div class="mb-2">
                          <img src="<%= variant.images[i] %>" class="img-fluid rounded" style="height: 100px;" />
                          <input type="hidden" name="variants[<%= vIndex %>].existingImages[]" value="<%= variant.images[i] %>" />
                        </div>
                      <% } %>
                      <input type="file"
                             name="variantImages[<%= vIndex %>]"
                             class="form-control variant-image-input"
                             accept="image/*"
                             data-index="<%= vIndex %>-<%= i %>" />
                    </div>
                  <% } %>
                </div>

                <div class="col-12" id="cropped-container-<%= vIndex %>"></div>
              </div>
            </div>
          <% }) %>

          <button type="submit" class="btn btn-primary mt-4">Save Product</button>
        </form>
        <div id="variants-container"></div>
        <button type="button" class="btn btn-success mb-3 mt-4" onclick="addVariant()">Add New Variant</button>
        <button type="button" class="btn btn-primary mt-3" onclick="saveAllVariants()" style="display: none;">Save All Variants</button>
      </div>
    </div>
  </div>

  <!-- Cropper Modal -->
  <div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <h5 class="modal-title text-white">Crop Image</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body text-center">
          <img id="cropper-image" src="" class="img-fluid" style="max-height: 400px;" />
        </div>
        <div class="modal-footer">
          <button type="button" id="crop-image-btn" class="btn btn-success">Crop & Save</button>
        </div>
      </div>
    </div>
  </div>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/cropperjs@1.5.13/dist/cropper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <script>

    function showToast(message, type = "primary") {
      const toast = document.createElement("div");
      toast.className = `toast align-items-center text-white bg-${type} border-0 show position-fixed bottom-0 end-0 m-3`;
      toast.role = "alert";
      toast.style.zIndex = "1055";
      toast.style.minWidth = "300px";
      toast.innerHTML = `
        <div class="d-flex">
          <div class="toast-body">${message}</div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>`;
      document.body.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    
    let cropper;
    let currentIndex = null;
    const croppedModal = new bootstrap.Modal(document.getElementById('cropperModal'));

    document.querySelectorAll('.variant-image-input').forEach(input => {
      input.addEventListener('change', function (e) {
        const files = Array.from(e.target.files);
        const index = e.target.dataset.index;

        if (files.length > 0) {
          const reader = new FileReader();
          reader.onload = function (event) {
            const image = document.getElementById('cropper-image');
            image.src = event.target.result;
            croppedModal.show();

            image.onload = () => {
              if (cropper) cropper.destroy();
              cropper = new Cropper(image, {
                aspectRatio: 1,
                viewMode: 1
              });
              currentIndex = index;
            };
          };
          reader.readAsDataURL(files[0]);
        }
      });
    });

    document.getElementById('crop-image-btn').addEventListener('click', function () {
      const canvas = cropper.getCroppedCanvas({ width: 600, height: 600 });
      const base64 = canvas.toDataURL("image/jpeg");

      const [variantIndex, imageIndex] = currentIndex.split('-'); // eg: "0-1"
      const container = document.getElementById(`cropped-container-${variantIndex}`);

      const hiddenInput = document.createElement('input');
      hiddenInput.type = 'hidden';
      hiddenInput.name = `variants[${variantIndex}].croppedImages[${imageIndex}]`;
      hiddenInput.value = base64;
      container.appendChild(hiddenInput);

      // Clear the file input to avoid double uploads
      document.querySelector(`input[data-index="${currentIndex}"]`).value = "";

      croppedModal.hide();
    });

    document.getElementById("product-form").addEventListener("submit", async function (e) {
      e.preventDefault();

      const form = e.target;
      const productId = form.dataset.productId;
      const formData = new FormData(form);
      let isValid = true;

      // Clear all existing error messages
      form.querySelectorAll(".error-msg").forEach(el => el.classList.add("d-none"));

      // Validate top-level fields
      const nameInput = form.querySelector('input[name="name"]');
      const categoryInput = form.querySelector('select[name="category"]');
      const genderInput = form.querySelector('select[name="gender"]');
      const namePattern = /^[a-zA-Z]{4,}.*/;
      const descriptionPattern = /^[a-zA-Z]\w{5,}/;

      if (!nameInput.value.trim()) {
        nameInput.nextElementSibling.classList.remove("d-none");
        isValid = false;
      }else if(!namePattern.test(nameInput.value.trim())){
        nameInput.nextElementSibling.textContent = "Enter a Valid Name";
        nameInput.nextElementSibling.classList.remove("d-none");
        isValid = false;
      }

      if (!categoryInput.value) {
        categoryInput.nextElementSibling.classList.remove("d-none");
        isValid = false;
      }

      if (!genderInput.value) {
        genderInput.nextElementSibling.classList.remove("d-none");
        isValid = false;
      }

      // Validate each variant block
      const variantBlocks = form.querySelectorAll(".variant-block");
      variantBlocks.forEach(block => {
        const volume = block.querySelector('input[name$=".volume"]');
        const price = block.querySelector('input[name$=".price"]');
        const stock = block.querySelector('input[name$=".stock"]');
        const description = block.querySelector('textarea[name$=".description"]');

        if (!volume.value.trim()) {
          volume.nextElementSibling.classList.remove("d-none");
          isValid = false;
        }else if(volume.value.trim()<0){
          volume.nextElementSibling.textContent = "Volume cannot be negative"
          volume.nextElementSibling.classList.remove("d-none");
          isValid = false;
        }

        if (!price.value.trim()) {
          price.nextElementSibling.classList.remove("d-none");
          isValid = false;
        }else if(price.value.trim()<0){
          price.nextElementSibling.textContent = "Price Must be non negative"
          price.nextElementSibling.classList.remove("d-none");
          isValid = false;          
        }

        if (!stock.value.trim()) {
          stock.nextElementSibling.classList.remove("d-none");
          isValid = false;
        }else if(stock.value.trim() < 0){
          stock.nextElementSibling.textContent = "Stock Must be a non negative number"
          stock.nextElementSibling.classList.remove("d-none");
          isValid = false;
        }

        if (!description.value.trim()) {
          description.nextElementSibling.classList.remove("d-none");
          isValid = false;
        }else if(!descriptionPattern.test(description.value.trim())){
          description.nextElementSibling.textContent = "Enter a Valid Description";
          description.nextElementSibling.classList.remove("d-none");
          isValid = false;
        }
      });

      if (!isValid) {
        console.log("not valid")
        showToast("Please fix validation errors.", "danger");
        return;
      }

      try {
        const response = await fetch(`/products/edit/${productId}`, {
          method: "PUT",
          body: formData
        });

        if (response.ok) {
          showToast("Product updated successfully!", "success");
        } else {
          const text = await response.json();
          showToast("Update failed: " + text.message, "danger");
        }
      } catch (err) {
        console.error("Error updating product:", err);
        showToast("Something went wrong.", "danger");
      }
    });


    let uniqueIdCounter = 0;

    function addVariant() {
        const container = document.getElementById('variants-container');
        const uniqueId = uniqueIdCounter++;
        const variantCount = container.querySelectorAll('.variant-row').length + 1;
        
        const variantHTML = `
        <div class="variant-row mt-4 p-3 position-relative" 
             style="background-color: #3b3b3b; border-radius: 10px;" 
             data-uid="${uniqueId}">
             
            <h6 class="text-white variant-heading">New Variant ${variantCount}</h6>
            
            <button type="button" class="btn-close position-absolute top-0 end-0 m-3" 
                    onclick="removeVariant(${uniqueId})"></button>
            
            <div class="row g-3 mt-2">
                <div class="col-md-4">
                    <label class="form-label text-white">Volume (ml)*</label>
                    <input type="number" name="newVariants[${uniqueId}][volume]" class="form-control new-variant-input" required />
                    <div class="text-danger error-msg d-none">Volume is required and must be positive</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Price*</label>
                    <input type="number" name="newVariants[${uniqueId}][price]" class="form-control new-variant-input" required />
                    <div class="text-danger error-msg d-none">Price is required and must be positive</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Stock*</label>
                    <input type="number" name="newVariants[${uniqueId}][stock]" class="form-control new-variant-input" required />
                    <div class="text-danger error-msg d-none">Stock is required and must be positive</div>
                </div>
                <div class="col-md-12">
                    <label class="form-label text-white">Description*</label>
                    <textarea name="newVariants[${uniqueId}][description]" rows="3" class="form-control new-variant-input" required></textarea>
                    <div class="text-danger error-msg d-none">Description is required and must start with a letter followed by at least 5 characters</div>
                </div>

                ${[1, 2, 3, 4].map(i => `
                    <div class="col-md-3 mb-3">
                        <label class="form-label text-white">Image ${i}*</label>
                        <input type="file" accept="image/*" 
                               class="form-control new-variant-image" 
                               data-variant="${uniqueId}" data-index="${i}" required>
                        <img id="preview-${uniqueId}-${i}" class="img-fluid mt-2" style="display:none; height: 100px; object-fit: cover;">
                    </div>`).join('')}
            </div>
        </div>

        <!-- Unique cropper modal for this variant -->
        <div class="modal fade" id="cropperModal-${uniqueId}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Crop Image</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body text-center">
                        <img id="cropperImage-${uniqueId}" class="img-fluid" style="max-height: 400px;">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary crop-save-btn" data-variant="${uniqueId}">Crop & Save</button>
                    </div>
                </div>
            </div>
        </div>
        `;

        container.insertAdjacentHTML('beforeend', variantHTML);
        initVariantCropper(uniqueId);
        updateSaveButtonVisibility();
        updateVariantNumbers();
    }

    function removeVariant(uid) {
        document.querySelector(`.variant-row[data-uid="${uid}"]`)?.remove();
        document.getElementById(`cropperModal-${uid}`)?.remove();
        updateSaveButtonVisibility();
        updateVariantNumbers();
    }

    function updateSaveButtonVisibility() {
        const container = document.getElementById("variants-container");
        const variantRows = container.querySelectorAll(".variant-row");
        const saveButton = document.querySelector('button[onclick="saveAllVariants()"]');
        
        if (variantRows.length > 0) {
            saveButton.style.display = "block";
        } else {
            saveButton.style.display = "none";
        }
    }

    // Handle cropper for each variant
    function initVariantCropper(variantId) {
        let cropperInstance;
        let currentImageIndex;

        document.querySelectorAll(`.new-variant-image[data-variant="${variantId}"]`)
            .forEach(input => {
                input.addEventListener('change', function (event) {
                    const file = event.target.files[0];
                    if (!file) return;

                    currentImageIndex = event.target.getAttribute("data-index");

                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const imageElement = document.getElementById(`cropperImage-${variantId}`);
                        imageElement.src = e.target.result;

                        const modal = new bootstrap.Modal(document.getElementById(`cropperModal-${variantId}`));
                        modal.show();

                        if (cropperInstance) cropperInstance.destroy();
                        cropperInstance = new Cropper(imageElement, { aspectRatio: 1, viewMode: 1 });
                    };
                    reader.readAsDataURL(file);
                });
            });

        // Crop save button
        document.querySelector(`#cropperModal-${variantId} .crop-save-btn`)
            .addEventListener('click', function () {
                if (!cropperInstance) return;

                const canvas = cropperInstance.getCroppedCanvas({ width: 500, height: 500 });
                canvas.toBlob(blob => {
                    const fileInput = document.querySelector(`.new-variant-image[data-variant="${variantId}"][data-index="${currentImageIndex}"]`);
                    const newFile = new File([blob], `variant-${variantId}-${currentImageIndex}.jpg`, { type: "image/jpeg" });

                    const dt = new DataTransfer();
                    dt.items.add(newFile);
                    fileInput.files = dt.files;

                    const preview = document.getElementById(`preview-${variantId}-${currentImageIndex}`);
                    preview.src = URL.createObjectURL(newFile);
                    preview.style.display = "block";
                });

                bootstrap.Modal.getInstance(document.getElementById(`cropperModal-${variantId}`)).hide();
            });
    }

    async function saveAllVariants() {
        const container = document.getElementById("variants-container");
        const variantRows = container.querySelectorAll(".variant-row");

        if (variantRows.length === 0) {
            showToast("No new variants to save", "warning");
            return;
        }

        // Clear all existing error messages
        container.querySelectorAll(".error-msg").forEach(el => el.classList.add("d-none"));

        let isValid = true;
        const formData = new FormData();
        const descriptionPattern = /^[a-zA-Z]\w{5,}/;

        variantRows.forEach((row, idx) => {
            const uid = row.getAttribute("data-uid");

            // Get form inputs
            const volume = row.querySelector('input[name$="[volume]"]');
            const price = row.querySelector('input[name$="[price]"]');
            const stock = row.querySelector('input[name$="[stock]"]');
            const description = row.querySelector('textarea[name$="[description]"]');

            // Validate volume
            if (!volume.value.trim()) {
                volume.nextElementSibling.textContent = "Volume is required";
                volume.nextElementSibling.classList.remove("d-none");
                isValid = false;
            } else if (parseFloat(volume.value) <= 0) {
                volume.nextElementSibling.textContent = "Volume must be a positive number";
                volume.nextElementSibling.classList.remove("d-none");
                isValid = false;
            }

            // Validate price
            if (!price.value.trim()) {
                price.nextElementSibling.textContent = "Price is required";
                price.nextElementSibling.classList.remove("d-none");
                isValid = false;
            } else if (parseFloat(price.value) <= 0) {
                price.nextElementSibling.textContent = "Price must be a positive number";
                price.nextElementSibling.classList.remove("d-none");
                isValid = false;
            }

            // Validate stock
            if (!stock.value.trim()) {
                stock.nextElementSibling.textContent = "Stock is required";
                stock.nextElementSibling.classList.remove("d-none");
                isValid = false;
            } else if (parseFloat(stock.value) < 0) {
                stock.nextElementSibling.textContent = "Stock must be a non-negative number";
                stock.nextElementSibling.classList.remove("d-none");
                isValid = false;
            }

            // Validate description
            if (!description.value.trim()) {
                description.nextElementSibling.textContent = "Description is required";
                description.nextElementSibling.classList.remove("d-none");
                isValid = false;
            } else if (!descriptionPattern.test(description.value.trim())) {
                description.nextElementSibling.textContent = "Description must start with a letter followed by at least 5 characters";
                description.nextElementSibling.classList.remove("d-none");
                isValid = false;
            }

            // Check if all 4 images are uploaded
            const imageInputs = row.querySelectorAll('.new-variant-image');
            let imagesUploaded = 0;
            imageInputs.forEach(input => {
                if (input.files[0]) imagesUploaded++;
            });

            if (imagesUploaded < 4) {
                showToast(`Variant ${idx + 1}: All 4 images are required`, "danger");
                isValid = false;
            }

            // Add to form data if valid
            if (isValid) {
                formData.append(`newVariants[${idx}][volume]`, volume.value);
                formData.append(`newVariants[${idx}][price]`, price.value);
                formData.append(`newVariants[${idx}][stock]`, stock.value);
                formData.append(`newVariants[${idx}][description]`, description.value);

                // Add images
                imageInputs.forEach((input, imageIdx) => {
                    if (input.files[0]) {
                        formData.append(`newVariants[${idx}][images]`, input.files[0]);
                    }
                });
            }
        });

        if (!isValid) {
            showToast("Please fix validation errors", "danger");
            return;
        }

        try {
            const response = await axios.post(`/products/add-new-variants/<%= product._id %>`, formData, {
                headers: { "Content-Type": "multipart/form-data" }
            });

            if (response.data.success) {
                showToast("New variants added successfully!", "success");
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                showToast(response.data.message || "Error adding variants", "danger");
            }
        } catch (err) {
            console.error("Error saving variants:", err);
            showToast(err.response?.data?.message || "Error adding variants", "danger");
        }
    }

    function updateVariantNumbers() {
        const container = document.getElementById("variants-container");
        const variantRows = container.querySelectorAll(".variant-row");
        
        variantRows.forEach((row, index) => {
            const heading = row.querySelector('.variant-heading');
            if (heading) {
                heading.textContent = `New Variant ${index + 1}`;
            }
        });
    }

    // Initialize save button visibility
    updateSaveButtonVisibility();

  </script>
</body>
</html>
