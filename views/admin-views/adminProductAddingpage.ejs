<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Product | Aromix</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #3b0066;
            color: white;
        }
        .form-control, .form-select {
            background-color: #e6d8f5;
            border: none;
        }
        .form-control:focus, .form-select:focus {
            box-shadow: none;
        }
        .image-upload-placeholder {
            background-color: white;
            border: 2px dashed #ccc;
            height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }
        .image-upload-placeholder:hover {
            background-color: #f5f5f5;
        }
        .add-btn {
            background: linear-gradient(to right, #ff6600, #ff3300);
            color: white;
            border: none;
            width: 200px;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(255, 102, 0, 0.5);
        }
        .add-btn:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="name" class="form-label">Product Name*</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="description" class="form-label">Description *</label>
                    <textarea name="description" id="description" rows="3" class="form-control" required></textarea>
                </div>
                <div class="col-md-6">
                    <label for="price" class="form-label">Price*</label>
                    <input type="number" name="price" id="price" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="category" class="form-label">Category*</label>
                    <select name="category" id="category" class="form-select" required>
                        <option value="" disabled selected>Select Category</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat._id %>"><%= cat.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="stock" class="form-label">Stock</label>
                    <input type="number" name="stock" id="stock" class="form-control">
                </div>
            </div>

            <!-- Image Upload Slots -->
            <div class="row mt-4">
                <% for(let i = 0; i < 4; i++) { %>
                <div class="col-md-3 mb-3">
                    <label for="image<%= i %>" class="form-label">Image <%= i + 1 %></label>
                    <div class="image-upload-placeholder">
                        <input type="file" name="images" id="image<%= i %>" accept="image/*" class="form-control" style="opacity:0;position:absolute;width:100%;height:100%;cursor:pointer;">
                        <i class="bi bi-image" style="font-size: 2rem; color: #bbb;"></i>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
                <button type="submit" class="btn add-btn">Add Product</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>