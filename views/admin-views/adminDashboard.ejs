<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Aromix</title>
    <style>
        #ordersChart {
        max-height: 400px; 
        }
    </style>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--Bootstrap icon-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-css/adminDashboard.css">
    <!--sidebar CSS-->
    <link rel="stylesheet" href="/css/admin-css/sidebar.css"> 
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar Include -->
         <div style="background-color: #1b1b1b;">
            <%- include('./partials/sidebar') %>
         </div>

        

        <!-- Main Content -->
        <div class="flex-grow-1 p-4" style="background-color: #1b1b1b;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white">Sales Summary</h2>
                <div class="d-flex align-items-center gap-3">
                    <select class="form-select" style="width: 120px;" id="periodSelect" onchange="toggleCustomInputs()">
                        <option value="daily" <%= period === 'daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%= period === 'weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%= period === 'monthly' ? 'selected' : '' %>>Monthly</option>
                        <option value="yearly" <%= period === 'yearly' ? 'selected' : '' %>>Yearly</option>
                    </select>
                    
                    <!-- Custom Date Input for Daily -->
                    <div id="dailyInput" style="display: none;">
                        <input type="date" class="form-control" id="customDate" value="<%= customDate || '' %>" style="width: 150px;">
                    </div>
                    
                    <!-- Custom Week Input for Weekly -->
                    <div id="weeklyInput" style="display: none;">
                        <input type="date" class="form-control" id="customWeekStart" value="<%= customWeekStart || '' %>" style="width: 150px;">
                    </div>
                    
                    <!-- Custom Month/Year Input for Monthly -->
                    <div id="monthlyInput" style="display: none;">
                        <select class="form-select me-2" id="customMonth" style="width: 100px;">
                            <option value="1" <%= customMonth === '1' ? 'selected' : '' %>>Jan</option>
                            <option value="2" <%= customMonth === '2' ? 'selected' : '' %>>Feb</option>
                            <option value="3" <%= customMonth === '3' ? 'selected' : '' %>>Mar</option>
                            <option value="4" <%= customMonth === '4' ? 'selected' : '' %>>Apr</option>
                            <option value="5" <%= customMonth === '5' ? 'selected' : '' %>>May</option>
                            <option value="6" <%= customMonth === '6' ? 'selected' : '' %>>Jun</option>
                            <option value="7" <%= customMonth === '7' ? 'selected' : '' %>>Jul</option>
                            <option value="8" <%= customMonth === '8' ? 'selected' : '' %>>Aug</option>
                            <option value="9" <%= customMonth === '9' ? 'selected' : '' %>>Sep</option>
                            <option value="10" <%= customMonth === '10' ? 'selected' : '' %>>Oct</option>
                            <option value="11" <%= customMonth === '11' ? 'selected' : '' %>>Nov</option>
                            <option value="12" <%= customMonth === '12' ? 'selected' : '' %>>Dec</option>
                        </select>
                        <select class="form-select" id="customYear" style="width: 80px;">
                            <% for(let year = new Date().getFullYear() - 5; year <= new Date().getFullYear() + 1; year++) { %>
                                <option value="<%= year %>" <%= customYear == year ? 'selected' : '' %>><%= year %></option>
                            <% } %>
                        </select>
                    </div>
                    
                    <!-- Custom Year Input for Yearly -->
                    <div id="yearlyInput" style="display: none;">
                        <select class="form-select" id="customYearOnly" style="width: 100px;">
                            <% for(let year = new Date().getFullYear() - 5; year <= new Date().getFullYear() + 1; year++) { %>
                                <option value="<%= year %>" <%= customYear == year ? 'selected' : '' %>><%= year %></option>
                            <% } %>
                        </select>
                    </div>
                    
                    <button class="btn btn-primary" onclick="applyCustomPeriod()">Apply</button>
                </div>
            </div>

            <div class="row text-white mb-4">
                <div class="col-md-3">
                    <div class="card card-stat revenue">
                        <div class="card-body">
                            <p class="mb-1">Revenue</p>
                            <h5>₹<%= metrics.revenue.toLocaleString() %></h5>
                            <small class="text-success">Current Period</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card card-stat orders">
                        <div class="card-body">
                            <p class="mb-1">Orders</p>
                            <h5><%= metrics.orders %></h5>
                            <small class="text-info">Total Orders</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card card-stat sold">
                        <div class="card-body">
                            <p class="mb-1">Products Sold</p>
                            <h5><%= metrics.productsSold.toLocaleString() %></h5>
                            <small class="text-success">Units Sold</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card card-stat customers">
                        <div class="card-body">
                            <p class="mb-1">Total Customers</p>
                            <h5><%= metrics.customers %></h5>
                            <small class="text-warning">Active Customers</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card p-3">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-black">Orders & Revenue Trend</h6>
                            <small class="text-muted"><%= period.charAt(0).toUpperCase() + period.slice(1) %> View</small>
                        </div>
                        <canvas id="ordersChart" height="100"></canvas>
                    </div>
                </div>
            </div>

            <!-- Best Selling Categories -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card p-3">
                        <h6 class="text-black mb-3">Best Selling Categories (Top 10)</h6>
                        <div class="table-responsive">
                            <table class="table table-dark table-sm">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Category</th>
                                        <th>Quantity</th>
                                        <th>Revenue</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bestSellingCategories.forEach((category, index) => { %>
                                        <tr>
                                            <td>#<%= index + 1 %></td>
                                            <td><%= category.name %></td>
                                            <td><%= category.quantity %></td>
                                            <td>₹<%= category.revenue.toLocaleString() %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <h6 class="text-black mb-3">Best Selling Products (Top 10)</h6>
                        <div class="table-responsive">
                            <table class="table table-dark table-sm">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Revenue</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bestSellingProducts.forEach((product, index) => { %>
                                        <tr>
                                            <td>#<%= index + 1 %></td>
                                            <td><%= product.name %></td>
                                            <td><%= product.quantity %></td>
                                            <td>₹<%= product.revenue.toLocaleString() %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom JS -->
    <script>
        // Chart data from server
        const chartData = {
            labels: JSON.parse('<%- JSON.stringify(chartData.labels) %>') ,
            orders: JSON.parse('<%- JSON.stringify(chartData.orders) %>') ,
            revenue: JSON.parse('<%- JSON.stringify(chartData.revenue) %>') 
        };

        // Initialize chart
        const ctx = document.getElementById('ordersChart').getContext('2d');
        const ordersChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartData.labels,
                datasets: [{
                    label: 'Orders',
                    data: chartData.orders,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1
                }, {
                    label: 'Revenue (₹)',
                    data: chartData.revenue,
                    borderColor: 'rgb(255, 99, 132)',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    tension: 0.1,
                    yAxisID: 'y1'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: 'white'
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            color: 'white'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    },
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        ticks: {
                            color: 'white'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        ticks: {
                            color: 'white'
                        },
                        grid: {
                            drawOnChartArea: false,
                        },
                    }
                }
            }
        });

        // Toggle custom inputs based on period selection
        function toggleCustomInputs() {
            const period = document.getElementById('periodSelect').value;
            
            // Hide all custom inputs
            document.getElementById('dailyInput').style.display = 'none';
            document.getElementById('weeklyInput').style.display = 'none';
            document.getElementById('monthlyInput').style.display = 'none';
            document.getElementById('yearlyInput').style.display = 'none';
            
            // Show relevant input
            if (period === 'daily') {
                document.getElementById('dailyInput').style.display = 'block';
            } else if (period === 'weekly') {
                document.getElementById('weeklyInput').style.display = 'block';
            } else if (period === 'monthly') {
                document.getElementById('monthlyInput').style.display = 'block';
            } else if (period === 'yearly') {
                document.getElementById('yearlyInput').style.display = 'block';
            }
        }
        
        // Apply custom period with parameters
        function applyCustomPeriod() {
            const period = document.getElementById('periodSelect').value;
            let url = `/admin/dashboard?period=${period}`;
            
            if (period === 'daily') {
                const customDate = document.getElementById('customDate').value;
                if (customDate) url += `&customDate=${customDate}`;
            } else if (period === 'weekly') {
                const customWeekStart = document.getElementById('customWeekStart').value;
                if (customWeekStart) url += `&customWeekStart=${customWeekStart}`;
            } else if (period === 'monthly') {
                const customMonth = document.getElementById('customMonth').value;
                const customYear = document.getElementById('customYear').value;
                if (customMonth) url += `&customMonth=${customMonth}`;
                if (customYear) url += `&customYear=${customYear}`;
            } else if (period === 'yearly') {
                const customYear = document.getElementById('customYearOnly').value;
                if (customYear) url += `&customYear=${customYear}`;
            }
            
            window.location.href = url;
        }
        
        // Initialize custom inputs on page load
        toggleCustomInputs();
    </script>
</body>
</html>