<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Aromix</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--Bootstrap icon-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-css/adminDashboard.css">
    <!--sidebar CSS-->
    <link rel="stylesheet" href="/css/admin-css/sidebar.css"> 
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar Include -->
        <%- include('./partials/sidebar') %>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4" style="background-color: #1b1b1b;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white">Sales Summary</h2>
                <div class="d-flex align-items-center">
                    <select class="form-select me-3" style="width: 120px;">
                        <option>2024</option>
                    </select>
                    <button class="btn btn-light me-2">PDF Download</button>
                    <button class="btn btn-light">XL Download</button>
                </div>
            </div>

            <div class="row text-white mb-4">
                <div class="col-md-3">
                    <div class="card card-stat revenue">
                        <div class="card-body">
                            <p class="mb-1">Revenue</p>
                            <h5>Rs 152390</h5>
                            <small class="text-success">+22%</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card card-stat orders">
                        <div class="card-body">
                            <p class="mb-1">Orders</p>
                            <h5>920</h5>
                            <small class="text-danger">-25%</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card card-stat sold">
                        <div class="card-body">
                            <p class="mb-1">Products Sold</p>
                            <h5>15.5K</h5>
                            <small class="text-success">+48%</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card card-stat customers">
                        <div class="card-body">
                            <p class="mb-1">Total Customers</p>
                            <h5>120</h5>
                            <small class="text-warning">+4%</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6>Orders Update</h6>
                    <a href="#">View Details</a>
                </div>
                <canvas id="ordersChart" height="100"></canvas>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom JS -->
    <script src="/js/admin-javascript/adminDashboard.js"></script>
</body>
</html>