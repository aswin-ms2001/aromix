<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Category | Aromix</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin-css/adminCategoryAdding.css">
  <link rel="stylesheet" href="/css/admin-css/sidebar.css">
</head>
<body>

<div class="d-flex">
  <!-- Sidebar Include -->
  <%- include('./partials/sidebar') %>

  <!-- Main Content -->
  <div class="flex-grow-1 p-4" style="background-color: #1b1b1b; min-height: 100vh;">
    <!-- Header -->
    <div class="mb-4">
      <h2 class="text-white">Add New Category</h2>
    </div>

    <!-- Add Category Form -->
    <div class="card p-4" style="background-color: #2e0e46; border-radius: 20px; max-width: 600px; margin: auto;">
      <form id="categoryForm" action="/adminCategory/add-category" method="POST" novalidate>
        <div class="mb-3">
          <label for="categoryName" class="form-label text-white">Category Name</label>
          <input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Enter category name" required>
          <div id="nameError" class="text-danger mt-1" style="display: none;"></div>
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn" style="background-color: #b3f0ff; color: black;">Save</button>
        </div>
      </form>

        <% if (typeof message !=='undefined' ) { %>
            <div class="alert <%= success ? 'alert-success' : 'alert-danger' %> mt-3" role="alert">
                <%= message %>
            </div>
        <% } %>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.getElementById("categoryForm").addEventListener("submit", function (e) {
    const input = document.getElementById("categoryName");
    const errorDiv = document.getElementById("nameError");
    const value = input.value.trim();

    // Regex: only letters & spaces, 3–40 chars
    const regex = /^[A-Za-z\s]{3,10}$/;

    if (!regex.test(value)) {
      e.preventDefault(); // Stop form submission
      errorDiv.textContent = "Category name must contain only letters and be 3–10 characters long.";
      errorDiv.style.display = "block";
      input.classList.add("is-invalid");
    } else {
      errorDiv.style.display = "none";
      input.classList.remove("is-invalid");
    }
  });
</script>

</body>
</html>